{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [ "@typescript-eslint" ],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {}
	},
	"rules": {
		"indent": [ "error", "tab" ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "double" ],
		"semi": [ "error", "never" ],
		"object-curly-spacing": [ "error", "always" ],
		"@typescript-eslint/no-explicit-any": "off"
	}
}
